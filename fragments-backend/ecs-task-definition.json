{
  "family": "fragments",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::290950875443:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::290950875443:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "fragments",
      "image": "290950875443.dkr.ecr.us-east-1.amazonaws.com/fragments:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "AWS_S3_BUCKET_NAME",
          "value": "kdewasi-fragments"
        },
        {
          "name": "AWS_DYNAMODB_TABLE_NAME",
          "value": "fragments"
        },
        {
          "name": "API_URL",
          "value": "http://localhost:8080"
        },
        {
          "name": "HTPASSWD_FILE",
          "value": "tests/.htpasswd"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fragments",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
